{% extends 'base.html.twig' %}

{% block title %}Banco index{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Banco index</h1>
            <a href="{{ path('app_banco_new') }}" class="btn btn-sm btn-primary">Create new</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for banco in bancos %}
                <tr>
                    <td>{{ banco.id }}</td>
                    <td>{{ banco.nome }}</td>
                    <td>{{ banco.createdAt ? banco.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ banco.updatedAt ? banco.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_banco_show', {'id': banco.id}) }}">show</a>
                        <a href="{{ path('app_banco_edit', {'id': banco.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
