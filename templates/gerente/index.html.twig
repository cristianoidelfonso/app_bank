                    <th>Banco</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for gerente in gerentes %}
                <tr>
                    <td>{{ gerente.id }}</td>
                    <td>{{ gerente.nome }}</td>
                    <td>{{ gerente.agencia.nome }}</td>
                    <td>{{ gerente.agencia.banco.nome }}</td>
                    <td>{{ gerente.createdAt ? gerente.createdAt|date('d/m/Y') : '' }}</td>
                    <td>{{ gerente.updatedAt ? gerente.updatedAt|date('d/m/Y') : '' }}</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_gerente_show', {'id': gerente.id}) }}">show</a>
                        <a class="btn btn-sm btn-outline-info" href="{{ path('app_gerente_edit', {'id': gerente.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
