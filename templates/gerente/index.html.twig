{% extends 'base.html.twig' %}

{% block title %}Gerente index{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Gerente index</h1>
            {% if is_granted('ROLE_ADMIN_AGENCIA') %}
                <a href="{{ path('app_gerente_new') }}" class="btn btn-sm btn-primary">Create new</a>
            {% endif %}
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
