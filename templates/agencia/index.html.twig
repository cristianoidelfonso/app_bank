{% extends 'base.html.twig' %}

{% block title %}Agencia index{% endblock %}

{% block body %}
    
    <div class="example-wrapper">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Agencia index</h1>
            {% if is_granted('ROLE_ADMIN_BANCO') %}
                <a href="{{ path('app_agencia_new') }}" class="btn btn-sm btn-primary">Create new</a>
            {% endif %}
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Banco</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for agencia in agencias %}
                <tr>
                    <td>{{ agencia.id }}</td>
                    <td>{{ agencia.nome }}</td>
                    <td>{{ agencia.banco.nome }}</td>
                    <td>{{ agencia.createdAt ? agencia.createdAt|date('d/m/Y') : '' }}</td>
                    <td>{{ agencia.updatedAt ? agencia.updatedAt|date('d/m/Y') : '' }}</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_agencia_show', {'id': agencia.id}) }}">show</a>
                        <a class="btn btn-sm btn-outline-info" href="{{ path('app_agencia_edit', {'id': agencia.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
