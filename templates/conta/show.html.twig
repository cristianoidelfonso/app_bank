{% extends 'base.html.twig' %}

{% block title %}Conta{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Conta</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ conta.id }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ conta.createdAt ? conta.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ conta.updatedAt ? conta.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Numero</th>
                    <td>{{ conta.numero }}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="d-inline">
            <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_conta_index') }}">back to list</a>

            <a class="btn btn-sm btn-outline-primary" href="{{ path('app_conta_edit', {'conta': conta.id}) }}">edit</a>

            {{ include('conta/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
